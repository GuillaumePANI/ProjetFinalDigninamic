@model WebApi.Models.Bdd.Composant

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h4>Composant</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    
        <div class="form-group">
            @Html.LabelFor(model => model.idQuestion, "idQuestion", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idQuestion", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idQuestion, "", new { @class = "text-danger" })
            </div>
        </div>
    
        <div class="form-group">
            @Html.LabelFor(model => model.idTypeReponse, "idTypeReponse", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idTypeReponse", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idTypeReponse, "", new { @class = "text-danger" })
            </div>
        </div>
    
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
    
<div>
    @Html.ActionLink("Retour aux détails du formulaire", "../Formulaires/Details", new { id = Model.idFormulaire })
</div>

