@model WebApi.Models.Bdd.Composant

<div>
    <h4>Composant</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Formulaire.titre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Formulaire.titre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Question.contenu)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Question.contenu)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TypeReponse.type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TypeReponse.type)
        </dd>

    </dl>
<p>
    @Html.ActionLink("Éditer", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Retour aux détails du formulaire", "../Formulaires/Details", new { id = Model.idFormulaire })
</p>
</div>
<table>
    <thead><b>Réponses</b></thead>
    <tbody>
        @foreach (var item in Model.Question.Reponse)
        {
        <tr><td>@item.contenu</td>
            <td class="col-md-offset-2 col-md-10"> @Html.ActionLink("Supprimer", "Delete", "Reponses", new {id = item.id, idCompo = Model.id }, null) </td>
        </tr>
        }
    </tbody>
</table>

<div>
    @using (Html.BeginForm("Create", "Reponses"))
    {
        @Html.AntiForgeryToken()
        <h4>Ajouter une réponse</h4>

        @Html.Hidden("idComposant", Model.id)
        @Html.Hidden("idQuestion", Model.Question.id)

        <div class="form-group">
            <div class="col-md-10">
            @Html.Label("Réponse")
                @Html.TextBox("contenu", "")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sauvegarder" class="btn btn-default" />
            </div>
        </div>
    }


</div>
