<h4>Questions</h4>
<p>
    @if (Model.dateValidation == null)
    {
        @Html.ActionLink("Ajouter un composant", "Create", "Questions", new { idForm = Model.id }, null)
    }
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Contenu</th>
            @if (Model.dateValidation == null)
            {
                <th colspan="3">Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var com in @Model.Composant)
        {
            <tr>
                <td><b>@com.Question.contenu</b></td>

                <td>
                    @if (Model.dateValidation == null)
                    {
                        @Html.ActionLink("Gérer les réponses", "Details", "Composants", new { id = com.id }, null)
                    }
                </td>
                <td>
                    @if (Model.dateValidation == null)
                    {
                        @Html.ActionLink("Éditer", "Edit", "Composants",
                             new WebApi.Models.Bdd.Composant { id = com.id }, null)
                    }
                </td>
                <td>
                    @if (Model.dateValidation == null)
                    {
                        @Html.ActionLink("Supprimer", "Delete", "Composants", new { id = com.id }, null)
                    }
                </td>
            </tr>
            foreach (var rep in com.Question.Reponse)
            {

                <tr>
                    <td>
                        &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;
                        @rep.contenu

                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }
        }
    </tbody>
</table>
@if (Model.dateCloturation != null && Model.dateCloturation < DateTime.Now)
{
    <br />
    <h4>Sondages</h4>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Date</th>
                @if (Model.dateValidation == null)
                {
                    <th colspan="3">Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var sond in @Model.Sondage)
            {
                <tr>
                    <td>@sond.date</td>

                    <td>
                        @Html.ActionLink("Détails", "Details", "Sondages", new { id = sond.id }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div id="piechart"></div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">
// Load google charts
google.charts.load('current', {'packages':['corechart']});
google.charts.setOnLoadCallback(drawChart);

// Draw the chart and set the chart values
function drawChart() {
  var data = google.visualization.arrayToDataTable([
  ['Task', 'Hours per Day'],
  ['Work', 8],
  ['Eat', 2],
  ['TV', 4],
  ['Gym', 2],
  ['Sleep', 8]
]);

  // Optional; add a title and set the width and height of the chart
  var options = {'title':'My Average Day', 'width':550, 'height':400};

  // Display the chart inside the <div> element with id="piechart"
  var chart = new google.visualization.PieChart(document.getElementById('piechart'));
  chart.draw(data, options);
}
</script>