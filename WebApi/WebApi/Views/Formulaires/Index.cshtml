@model IEnumerable<WebApi.Models.Bdd.Formulaire>

<h3>Gestionnaire de formulaires de satisfaction</h3>

<p>
    @Html.ActionLink("Ajouter un formulaire", "Create")
</p>
<div>
    <h4><b>Formulaires en cours d'élaboration</b></h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateCreation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateValidation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateCloturation)
            </th>
            <th colspan="4"></th>
            
        </tr>

        @foreach (var item in (List<WebApi.Models.Bdd.Formulaire>)ViewBag.formulaireToValidate)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.dateCreation)
            </td>
            <td>
                  @Html.ActionLink("Valider", "ValiderFormulaire", new { id = item.id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateCloturation)
            </td>
            <td>
                @Html.ActionLink("Éditer", "Edit", new { id = item.id }) 
            </td>
            <td>
                @Html.ActionLink("Détails", "Details", new { id = item.id }) 
            </td>
            <td>
                @Html.ActionLink("Supprimer", "Delete", new { id = item.id })
            </td>
            <td>
                @Html.ActionLink("Dupliquer", "Duplicate", new { id = item.id })
            </td>
        </tr>
        }

    </table>
    <h4><b>Formulaires en cours d'évaluation</b></h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateCreation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateValidation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateCloturation)
            </th>
            <th colspan="3"></th>
        </tr>

        @foreach (var item in (List<WebApi.Models.Bdd.Formulaire>)ViewBag.formulaireToClose)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateCreation)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.dateValidation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateCloturation)

            </td>
            <td>
                @Html.ActionLink("Clôturer", "CloturerFormulaire", new { id = item.id })
            </td>
            <td>
                @Html.ActionLink("Détails", "Details", new { id = item.id })
            </td>
            <td>
                @Html.ActionLink("Dupliquer", "Duplicate", new { id = item.id })
            </td>
        </tr>
        }
    </table>
    <h4><b>Formulaires clos</b></h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateCreation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateValidation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateCloturation)
            </th>
            <th colspan="2"></th>
        </tr>

        @foreach (var item in (List<WebApi.Models.Bdd.Formulaire>)ViewBag.formulaireClosed)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateCreation)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.dateValidation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateCloturation)
            </td>
            <td>
                @Html.ActionLink("Détails", "Details", new { id = item.id })
            </td>
            <td>
                @Html.ActionLink("Dupliquer", "Duplicate", new { id = item.id })
            </td>
        </tr>
        }
    </table>
</div>

